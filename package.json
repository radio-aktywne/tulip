{
  "name": "tulip",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rm --recursive --force build/",
    "dev": "AUTH_URL=\"${TULIP__URLS__PUBLIC:-http://localhost:10530}\" next dev --hostname \"${TULIP__SERVER__HOST:-0.0.0.0}\" --port \"${TULIP__SERVER__PORT:-10530}\"",
    "generate-api": "npm run -- generate-api-beaver && npm run -- generate-api-scorpion",
    "generate-api-beaver": "openapi-typescript openapi/beaver.yaml -o src/services/beaver/types.d.ts",
    "generate-api-scorpion": "openapi-typescript openapi/scorpion.yaml -o src/services/scorpion/types.d.ts",
    "locales": "lingui extract --clean --overwrite",
    "run": "AUTH_URL=\"${TULIP__URLS__PUBLIC:-http://localhost:10530}\" next start --hostname \"${TULIP__SERVER__HOST:-0.0.0.0}\" --port \"${TULIP__SERVER__PORT:-10530}\"",
    "update": "ncu --peer --upgrade && npm i --no-audit --no-fund"
  },
  "dependencies": {
    "@lingui/react": "^5.2.0",
    "@mantine/core": "^7.17.2",
    "@mantine/dates": "^7.17.2",
    "@mantine/form": "^7.17.2",
    "@mantine/hooks": "^7.17.2",
    "@mantine/notifications": "^7.17.2",
    "@radio-aktywne/ui": "github:radio-aktywne/ui#0.4.0",
    "client-only": "^0.0.1",
    "dayjs": "^1.11.13",
    "immer": "^10.1.1",
    "next": "14.2.25",
    "next-auth": "^5.0.0-beta.25",
    "openapi-fetch": "^0.13.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "server-only": "^0.0.1",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.21.0",
    "@lingui/cli": "^5.2.0",
    "@lingui/format-po": "^5.2.0",
    "@lingui/loader": "^5.2.0",
    "@lingui/swc-plugin": "5.0.0-next.2",
    "@next/eslint-plugin-next": "14.2.24",
    "@types/node": "^20.17.19",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "eslint-plugin-lingui": "^0.10.0",
    "eslint-plugin-perfectionist": "^4.9.0",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "npm-check-updates": "^17.1.14",
    "openapi-typescript": "^7.6.1",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "overrides": {
    "@lingui/react": "$@lingui/react"
  }
}
